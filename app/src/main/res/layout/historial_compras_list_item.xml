<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="#f31231ca" android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Alfajor Milka Triple Blan"
        android:id="@+id/itemDescripcionLabel"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toLeftOf="@+id/itemMontoLabel"
        android:layout_toRightOf="@+id/fechaLabel" android:layout_toEndOf="@+id/fechaLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$ 19.99"
        android:id="@+id/itemMontoLabel"
        android:paddingRight="15dp"
        android:textColor="#4d9e38"
        android:textSize="20sp" android:layout_centerVertical="true"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/fechaLabel"
        tools:text="Fecha: 26/04/16"
        android:textSize="15sp"
        android:layout_width="66dp" android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginTop="2dp"
        android:textColor="@color/colorPrimaryDark"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        android:color="@color/material_blue_grey_90"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
</RelativeLayout>